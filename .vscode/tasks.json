{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Debug Build",
      "type": "shell",
      "command": "/opt/homebrew/bin/fpc",
      "args": [
        "-gw3",
        "-gl",
        "-gh",
        "-vewnh",
        "-al",
        "-o${fileBasenameNoExtension}.dbg",
        "${fileBasename}",
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": {
        "owner": "fpc",
        "fileLocation": [ "relative", "${workspaceFolder}" ],
        "pattern": {
          "regexp": "^(\\w+\\.(?:pas|pp))\\((\\d+),(\\d+)\\) (Error|Warning|Fatal|Note|Hint): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Release Build",
      "type": "shell",
      "command": "/opt/homebrew/bin/fpc",
      "args": [
        "-Xs",
        "-O2g",
        "-vewnh",
        "-FE${cwd}/target/release",
        "${fileBasename}",
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": {
        "owner": "fpc",
        "fileLocation": [ "relative", "${workspaceFolder}" ],
        "pattern": {
          "regexp": "^(\\w+\\.(?:pas|pp))\\((\\d+),(\\d+)\\) (Error|Warning|Fatal|Note|Hint): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}